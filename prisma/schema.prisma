generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProfileType {
  ADMINISTRADOR
  GERENTE
  SUPORTE
  COLABORADOR
}

enum Sector {
  TI
  FINANCEIRO
  RH
  FISCAL
  CONTABIL
  LEGALIZACAO
}

model User {
  id             String      @id    @default(uuid())
  name           String
  email          String      @unique
  passwordHash   String

  profile        ProfileType
  sector         Sector

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  passwordResetTokens PasswordResetToken[]

  @@map("user")
}

enum StatusFinanceiro {
  EM_DIA
  PENDENTE
  ATRASADO
  NEGOCIANDO
}

model Cliente {
  id            String    @id @default(uuid())
  cod           Int       @unique
  nome          String    
  cpf           String    @unique
  senhaGovHash  String
  email         String?
  telefone      String?
  responsavel   String
  pendencias    String?
  valorIR       Decimal
  status        StatusFinanceiro

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("cliente")
}

model PasswordResetToken {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  token      String   @unique
  expiresAt  DateTime
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@map("password_reset_token")
}