generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProfileType {
  ADMINISTRADOR
  GERENTE
  SUPORTE
  COLABORADOR
}

enum Sector {
  TI
  FINANCEIRO
  RH
  FISCAL
  CONTABIL
  LEGALIZACAO
}

model User {
  id             String      @id    @default(uuid())
  name           String
  email          String      @unique
  passwordHash   String

  profile        ProfileType
  sector         Sector

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@map("user")
}